---
// No imports needed for this static illustration
---

<div
  class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-lg mt-4 opacity-65"
>
  <div class="bg-white rounded-lg p-4 h-40 flex flex-col">
    <!-- Header -->
    <div class="text-center mb-3">
      <div class="text-sm font-semibold text-green-600">+35% Improvement</div>
      <div class="text-xs text-gray-500">Click Rate Performance</div>
    </div>

    <!-- Test Variations -->
    <div class="flex-1 space-y-2">
      <!-- Variation A - Winner -->
      <div
        class="flex items-center justify-between p-2 bg-green-50 border border-green-200 rounded-md"
      >
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-green-500 rounded-full"></div>
          <span class="text-xs font-medium text-gray-900">Subject A</span>
          <span
            class="inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800"
          >
            Winner
          </span>
        </div>
        <div class="text-xs font-semibold text-green-600">8.4%</div>
      </div>

      <!-- Variation B -->
      <div
        class="flex items-center justify-between p-2 bg-gray-50 border border-gray-200 rounded-md"
      >
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
          <span class="text-xs font-medium text-gray-900">Subject B</span>
        </div>
        <div class="text-xs font-semibold text-gray-600">6.2%</div>
      </div>
    </div>
  </div>
</div>
