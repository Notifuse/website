---
// No imports needed for this static illustration
---

<div
  class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-lg mt-4 opacity-65"
>
  <div class="bg-white rounded-lg p-4 h-40 flex flex-col">
    <!-- Key Metrics -->
    <div class="grid grid-cols-2 gap-3 mb-4">
      <div class="text-center">
        <div class="text-lg font-bold text-blue-600">68.5%</div>
        <div class="text-xs text-gray-500">Open Rate</div>
      </div>
      <div class="text-center">
        <div class="text-lg font-bold text-green-600">24.3%</div>
        <div class="text-xs text-gray-500">Click Rate</div>
      </div>
    </div>

    <!-- Device Breakdown -->
    <div class="mt-auto pt-3 border-t border-gray-100">
      <div class="space-y-1">
        <div class="flex items-center justify-between text-xs">
          <span class="text-gray-700">Desktop</span>
          <div class="flex items-center gap-2">
            <div class="w-8 bg-gray-200 rounded-full h-1">
              <div class="bg-blue-500 h-1 rounded-full" style="width: 65%">
              </div>
            </div>
            <span class="text-gray-500 text-xs">65%</span>
          </div>
        </div>
        <div class="flex items-center justify-between text-xs">
          <span class="text-gray-700">Mobile</span>
          <div class="flex items-center gap-2">
            <div class="w-8 bg-gray-200 rounded-full h-1">
              <div class="bg-green-500 h-1 rounded-full" style="width: 35%">
              </div>
            </div>
            <span class="text-gray-500 text-xs">35%</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
