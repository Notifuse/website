---
interface Props {
  id: string;
  title: string;
  gradient?: boolean;
}

const { id, title, gradient = false } = Astro.props;
---

<section id={id} class="border-b border-gray-200 scroll-mt-20">
  <div class="px-4 lg:px-8 py-12">
    <div class="max-w-5xl mx-auto">
      {
        gradient ? (
          <h2 class="text-2xl lg:text-3xl font-bold mb-8">
            <span class="bg-gradient-to-r from-primary to-pink-600 bg-clip-text text-transparent">
              {title}
            </span>
          </h2>
        ) : (
          <h2 class="text-2xl lg:text-3xl font-bold text-slate-900 mb-8">
            {title}
          </h2>
        )
      }
      <slot />
    </div>
  </div>
</section>

