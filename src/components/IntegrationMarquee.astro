---
import sparkpostLogo from "../assets/integrations/sparkpost.png"
import postmarkLogo from "../assets/integrations/postmark.png"
import mailjetLogo from "../assets/integrations/mailjet.png"
import mailgunLogo from "../assets/integrations/mailgun.png"
import amazonSesLogo from "../assets/integrations/amazonses.png"
---

<div class="mt-20">
  <p class="text-center text-gray-600 mb-8 text-lg">
    Trusted email delivery with industry-leading providers
  </p>
  <div class="relative overflow-hidden">
    <!-- Left fade gradient -->
    <div
      class="absolute left-0 top-0 w-16 h-full bg-gradient-to-r from-white-98 to-transparent z-10 pointer-events-none"
    >
    </div>
    <!-- Right fade gradient -->
    <div
      class="absolute right-0 top-0 w-16 h-full bg-gradient-to-l from-white-98 to-transparent z-10 pointer-events-none"
    >
    </div>
    <div class="flex animate-scroll">
      <!-- First set of logos -->
      <div class="flex items-center space-x-4 md:space-x-8 min-w-max">
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={sparkpostLogo.src}
            alt="SparkPost"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={postmarkLogo.src}
            alt="Postmark"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={mailjetLogo.src}
            alt="Mailjet"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={mailgunLogo.src}
            alt="Mailgun"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={amazonSesLogo.src}
            alt="Amazon SES"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
      </div>
      <!-- Second set for seamless loop -->
      <div
        class="flex items-center space-x-4 md:space-x-8 min-w-max ml-4 md:ml-8"
      >
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={sparkpostLogo.src}
            alt="SparkPost"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={postmarkLogo.src}
            alt="Postmark"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={mailjetLogo.src}
            alt="Mailjet"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={mailgunLogo.src}
            alt="Mailgun"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={amazonSesLogo.src}
            alt="Amazon SES"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
      </div>
      <!-- Third set for seamless loop -->
      <div
        class="flex items-center space-x-4 md:space-x-8 min-w-max ml-4 md:ml-8"
      >
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={sparkpostLogo.src}
            alt="SparkPost"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={postmarkLogo.src}
            alt="Postmark"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={mailjetLogo.src}
            alt="Mailjet"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={mailgunLogo.src}
            alt="Mailgun"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
        <div class="p-4 w-32 h-16 flex items-center justify-center">
          <img
            src={amazonSesLogo.src}
            alt="Amazon SES"
            class="max-h-8 max-w-full object-contain filter grayscale hover:grayscale-0 transition-all duration-300"
          />
        </div>
      </div>
    </div>
  </div>
</div>
