---
import logoMedium from "../assets/logo/logo-medium.png"
---

<!-- Navigation -->
<nav
  class="border-b border-gray-200 sticky top-0 z-50 backdrop-blur-sm bg-white-98/95"
>
  <div class="px-4 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <a href="/">
          <img src={logoMedium.src} alt="Notifuse" class="h-8" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="/#features"
          class="text-gray-600 hover:text-gray-900 transition-colors"
          >Features</a
        >
        <a
          href="/compare"
          class="text-gray-600 hover:text-gray-900 transition-colors">Compare</a
        >
        <a
          href="/#pricing"
          class="text-gray-600 hover:text-gray-900 transition-colors">Pricing</a
        >
        <a
          href="https://docs.notifuse.com"
          class="text-gray-600 hover:text-gray-900 transition-colors">Docs</a
        >
      </div>

      <!-- Desktop Actions -->
      <div class="hidden md:flex items-center space-x-4">
        <div class="pt-[7px]">
          <a
            class="github-button"
            href="https://github.com/notifuse/notifuse"
            data-color-scheme="no-preference: light; light: light; dark: light;"
            data-size="large"
            data-show-count="true"
            aria-label="Star notifuse/notifuse on GitHub"
          >
            Star
          </a>
        </div>
        <a
          href="https://docs.notifuse.com/installation"
          class="bg-primary text-white px-4 py-1 rounded-md hover:bg-primary/80 transition-colors"
          >Get Started</a
        >
      </div>

      <!-- Mobile Actions -->
      <div class="md:hidden flex items-center gap-6">
        <div class="pt-[7px]">
          <a
            class="github-button"
            href="https://github.com/notifuse/notifuse"
            data-color-scheme="no-preference: light; light: light; dark: light;"
            data-size="large"
            data-show-count="true"
            aria-label="Star notifuse/notifuse on GitHub"
          >
            Star
          </a>
        </div>
        <button
          type="button"
          id="mobile-menu-button"
          class="text-gray-600 hover:text-gray-900 transition-colors flex items-center"
          aria-label="Open menu"
        >
          <svg
            id="menu-icon"
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            id="close-icon"
            class="w-6 h-6 hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="md:hidden hidden border-t border-gray-200 bg-white"
    >
      <div class="px-4 py-4 space-y-4">
        <a
          href="/#features"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Features</a
        >
        <a
          href="/compare"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Compare</a
        >
        <a
          href="/#pricing"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Pricing</a
        >
        <a
          href="https://docs.notifuse.com"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Docs</a
        >
        <div class="pt-4 border-t border-gray-200 space-y-4">
          <a
            class="github-button"
            href="https://github.com/notifuse/notifuse"
            data-color-scheme="no-preference: light; light: light; dark: light;"
            data-size="large"
            data-show-count="true"
            aria-label="Star notifuse/notifuse on GitHub"
          >
            Star
          </a>
          <a
            href="#"
            class="block bg-primary text-white px-4 py-2 rounded-md hover:bg-primary/80 transition-colors text-center"
            >Get Started</a
          >
        </div>
      </div>
    </div>
  </div>
</nav>

<script async defer src="https://buttons.github.io/buttons.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button")
    const mobileMenu = document.getElementById("mobile-menu")
    const menuIcon = document.getElementById("menu-icon")
    const closeIcon = document.getElementById("close-icon")

    if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
      mobileMenuButton.addEventListener("click", function () {
        const isMenuOpen = !mobileMenu.classList.contains("hidden")

        if (isMenuOpen) {
          // Close menu
          mobileMenu.classList.add("hidden")
          menuIcon.classList.remove("hidden")
          closeIcon.classList.add("hidden")
          mobileMenuButton.setAttribute("aria-label", "Open menu")
        } else {
          // Open menu
          mobileMenu.classList.remove("hidden")
          menuIcon.classList.add("hidden")
          closeIcon.classList.remove("hidden")
          mobileMenuButton.setAttribute("aria-label", "Close menu")
        }
      })

      // Close menu when clicking on a link
      const mobileMenuLinks = mobileMenu.querySelectorAll("a")
      mobileMenuLinks.forEach((link) => {
        link.addEventListener("click", function () {
          mobileMenu.classList.add("hidden")
          menuIcon.classList.remove("hidden")
          closeIcon.classList.add("hidden")
          mobileMenuButton.setAttribute("aria-label", "Open menu")
        })
      })
    }
  })
</script>
