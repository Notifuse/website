---
import logoMedium from "../assets/logo/logo-medium.png"
---

<!-- Navigation -->
<nav
  class="border-b border-gray-200 sticky top-0 z-50 backdrop-blur-sm bg-white-98/95"
>
  <div class="px-4 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex items-center">
        <img src={logoMedium.src} alt="Notifuse" class="h-8" />
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        <a
          href="#features"
          class="text-gray-600 hover:text-gray-900 transition-colors"
          >Features</a
        >
        <a
          href="#pricing"
          class="text-gray-600 hover:text-gray-900 transition-colors">Pricing</a
        >
        <a
          href="https://docs.notifuse.com"
          class="text-gray-600 hover:text-gray-900 transition-colors">Docs</a
        >
      </div>

      <!-- Desktop Actions -->
      <div class="hidden md:flex items-center space-x-4">
        <a
          href="https://github.com/notifuse/notifuse"
          class="text-gray-600 hover:text-gray-900 transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="bg-primary text-white px-4 py-1 rounded-md hover:bg-primary/80 transition-colors"
          >Get Started</a
        >
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button
          type="button"
          id="mobile-menu-button"
          class="text-gray-600 hover:text-gray-900 transition-colors"
          aria-label="Open menu"
        >
          <svg
            id="menu-icon"
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            id="close-icon"
            class="w-6 h-6 hidden"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="md:hidden hidden border-t border-gray-200 bg-white"
    >
      <div class="px-4 py-4 space-y-4">
        <a
          href="#features"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Features</a
        >
        <a
          href="#pricing"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Pricing</a
        >
        <a
          href="https://docs.notifuse.com"
          class="block text-gray-600 hover:text-gray-900 transition-colors"
          >Docs</a
        >
        <div class="pt-4 border-t border-gray-200 space-y-4">
          <a
            href="https://github.com/notifuse/notifuse"
            class="flex items-center text-gray-600 hover:text-gray-900 transition-colors"
          >
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.30.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            GitHub
          </a>
          <a
            href="#"
            class="block bg-primary text-white px-4 py-2 rounded-md hover:bg-primary/80 transition-colors text-center"
            >Get Started</a
          >
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button")
    const mobileMenu = document.getElementById("mobile-menu")
    const menuIcon = document.getElementById("menu-icon")
    const closeIcon = document.getElementById("close-icon")

    if (mobileMenuButton && mobileMenu && menuIcon && closeIcon) {
      mobileMenuButton.addEventListener("click", function () {
        const isMenuOpen = !mobileMenu.classList.contains("hidden")

        if (isMenuOpen) {
          // Close menu
          mobileMenu.classList.add("hidden")
          menuIcon.classList.remove("hidden")
          closeIcon.classList.add("hidden")
          mobileMenuButton.setAttribute("aria-label", "Open menu")
        } else {
          // Open menu
          mobileMenu.classList.remove("hidden")
          menuIcon.classList.add("hidden")
          closeIcon.classList.remove("hidden")
          mobileMenuButton.setAttribute("aria-label", "Close menu")
        }
      })

      // Close menu when clicking on a link
      const mobileMenuLinks = mobileMenu.querySelectorAll("a")
      mobileMenuLinks.forEach((link) => {
        link.addEventListener("click", function () {
          mobileMenu.classList.add("hidden")
          menuIcon.classList.remove("hidden")
          closeIcon.classList.add("hidden")
          mobileMenuButton.setAttribute("aria-label", "Open menu")
        })
      })
    }
  })
</script>
