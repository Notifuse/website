---
// No imports needed for this static illustration
---

<div
  class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-lg mt-4 opacity-65"
>
  <div class="bg-white rounded-lg p-4 h-40 flex flex-col">
    <!-- Header -->
    <div class="text-center mb-3">
      <div class="text-sm font-semibold text-gray-900">
        Notification Preferences
      </div>
      <div class="text-xs text-gray-500">john.doe@example.com</div>
    </div>

    <!-- Subscription Lists -->
    <div class="flex-1 space-y-2">
      <!-- Newsletter -->
      <div
        class="flex items-center justify-between p-2 bg-gray-50 border border-gray-200 rounded-md"
      >
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
          <span class="text-xs font-medium text-gray-900"
            >Weekly Newsletter</span
          >
        </div>
        <div class="relative">
          <div
            class="w-8 h-4 bg-green-500 rounded-full flex items-center justify-end pr-0.5"
          >
            <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
          </div>
        </div>
      </div>

      <!-- Product Updates -->
      <div
        class="flex items-center justify-between p-2 bg-gray-50 border border-gray-200 rounded-md"
      >
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
          <span class="text-xs font-medium text-gray-900">Product Updates</span>
        </div>
        <div class="relative">
          <div
            class="w-8 h-4 bg-gray-300 rounded-full flex items-center justify-start pl-0.5"
          >
            <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
