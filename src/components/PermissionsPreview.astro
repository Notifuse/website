---
// Permissions Preview Component
---

<div
  class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-lg mt-4 opacity-65"
>
  <div class="bg-white rounded-lg p-4 h-40 flex flex-col">
    <!-- Header -->
    <div class="text-center mb-3">
      <div class="text-sm font-semibold text-gray-900">User Permissions</div>
      <div class="text-xs text-gray-500">Grant access by feature</div>
    </div>

    <!-- Role List -->
    <div class="flex-1 space-y-2">
      <!-- Contacts -->
      <div
        class="flex items-center justify-between p-2 bg-gray-50 border border-gray-200 rounded-md"
      >
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-primary rounded-full"></div>
          <span class="text-xs font-medium text-gray-900">Contacts</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="flex items-center gap-1">
            <span class="text-xs text-gray-600">Read</span>
            <div
              class="w-8 h-4 bg-green-500 rounded-full flex items-center justify-end pr-0.5"
            >
              <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
            </div>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-xs text-gray-600">Write</span>
            <div
              class="w-8 h-4 bg-green-500 rounded-full flex items-center justify-end pr-0.5"
            >
              <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
            </div>
          </div>
        </div>
      </div>

      <!-- Broadcasts -->
      <div
        class="flex items-center justify-between p-2 bg-gray-50 border border-gray-200 rounded-md"
      >
        <div class="flex items-center gap-2">
          <div class="w-2 h-2 bg-purple-500 rounded-full"></div>
          <span class="text-xs font-medium text-gray-900">Broadcasts</span>
        </div>
        <div class="flex items-center gap-2">
          <div class="flex items-center gap-1">
            <span class="text-xs text-gray-600">Read</span>
            <div
              class="w-8 h-4 bg-green-500 rounded-full flex items-center justify-end pr-0.5"
            >
              <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
            </div>
          </div>
          <div class="flex items-center gap-1">
            <span class="text-xs text-gray-600">Write</span>
            <div
              class="w-8 h-4 bg-gray-300 rounded-full flex items-center justify-start pl-0.5"
            >
              <div class="w-3 h-3 bg-white rounded-full shadow-sm"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
