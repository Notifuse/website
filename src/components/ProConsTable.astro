---
interface TableRow {
  label: string;
  notifuse: string;
  competitor: string;
}

interface Props {
  competitor: string;
  rows: TableRow[];
}

const { competitor, rows } = Astro.props;
---

<div class="overflow-x-auto">
  <table class="w-full border-collapse">
    <thead>
      <tr class="border-b-2 border-gray-200">
        <th class="text-left py-4 px-4 font-semibold text-slate-900"></th>
        <th class="text-left py-4 px-4 font-semibold text-slate-900">
          <span
            class="bg-gradient-to-r from-primary to-pink-600 bg-clip-text text-transparent"
          >
            Notifuse
          </span>
        </th>
        <th class="text-left py-4 px-4 font-semibold text-slate-900">
          {competitor}
        </th>
      </tr>
    </thead>
    <tbody>
      {
        rows.map((row, index) => (
          <tr
            class={`border-b border-gray-200 hover:bg-white transition-colors ${
              index % 2 === 0 ? "bg-gray-50" : ""
            }`}
          >
            <td class="py-4 px-4 font-medium text-gray-700">{row.label}</td>
            <td class="py-4 px-4 text-gray-600">{row.notifuse}</td>
            <td class="py-4 px-4 text-gray-600">{row.competitor}</td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>

