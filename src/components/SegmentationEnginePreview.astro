---
// Segmentation Engine Preview Component
---

<div
  class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-lg mt-4 opacity-65"
>
  <div
    class="bg-white rounded-lg py-2 px-4 h-40 flex items-center justify-center"
  >
    <div class="flex items-center justify-center gap-8">
      <!-- Group 1: Circle with colorful border and dots -->
      <div class="text-center">
        <div class="relative w-16 h-16 mb-2">
          <!-- Circle with gradient border -->
          <div
            class="w-16 h-16 rounded-full border-2 border-transparent bg-clip-padding"
            style="background: linear-gradient(white, white) padding-box, linear-gradient(135deg, #f97316, #ec4899, #f472b6) border-box;"
          >
            <!-- Dots inside -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="grid grid-cols-3 gap-1">
                <div class="w-1.5 h-1.5 rounded-full bg-orange-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-pink-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-orange-300"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-pink-300"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-pink-500"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-orange-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-orange-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-pink-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-pink-300"></div>
              </div>
            </div>
          </div>
        </div>
        <p class="text-xs font-medium text-slate-900">Active Users</p>
        <p class="text-xs text-gray-500">1,234 contacts</p>
      </div>

      <!-- Group 2: Square with colorful border and dots -->
      <div class="text-center">
        <div class="relative w-16 h-16 mb-2">
          <!-- Square with gradient border -->
          <div
            class="w-16 h-16 rounded-lg border-2 border-transparent bg-clip-padding"
            style="background: linear-gradient(white, white) padding-box, linear-gradient(135deg, #3b82f6, #6366f1, #a855f7) border-box;"
          >
            <!-- Dots inside -->
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="grid grid-cols-3 gap-1">
                <div class="w-1.5 h-1.5 rounded-full bg-blue-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-indigo-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-blue-300"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-purple-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-indigo-500"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-purple-300"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-blue-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-indigo-400"></div>
                <div class="w-1.5 h-1.5 rounded-full bg-purple-400"></div>
              </div>
            </div>
          </div>
        </div>
        <p class="text-xs font-medium text-slate-900">VIP Users</p>
        <p class="text-xs text-gray-500">567 contacts</p>
      </div>
    </div>
  </div>
</div>
