---
import "../../styles/global.css"
import Navigation from "../../components/Navigation.astro"
import Footer from "../../components/Footer.astro"
import ComparisonLayout from "../../components/ComparisonLayout.astro"
import TableOfContents from "../../components/TableOfContents.astro"
import ComparisonHero from "../../components/ComparisonHero.astro"
import ProConsTable from "../../components/ProConsTable.astro"
import ComparisonTable from "../../components/ComparisonTable.astro"
import FeatureSection from "../../components/FeatureSection.astro"
import ComparisonCTA from "../../components/ComparisonCTA.astro"
import emailEditorImage from "../../assets/screenshots/email_editor.png"
import contactProfileImage from "../../assets/screenshots/contact_profile.png"
import dashboardImage from "../../assets/screenshots/dashboard.png"

// Table of Contents items
const tocItems = [
  { id: "overview", label: "Overview" },
  { id: "quick-comparison", label: "Quick Comparison" },
  { id: "email-builder", label: "Email Builder" },
  { id: "mailing-list", label: "Mailing-list Management" },
  { id: "campaigns", label: "Campaigns" },
  { id: "email-sending", label: "Email Sending & Deliverability" },
  { id: "contact-management", label: "Contact Management & Segmentation" },
  { id: "analytics", label: "Analytics & Reporting" },
  { id: "multi-tenancy", label: "Multi-tenancy & Agency" },
  { id: "developer-api", label: "Developer Experience & API" },
  { id: "pricing", label: "Pricing & Cost Comparison" },
  { id: "use-cases", label: "Use Cases" },
  { id: "why-switch", label: "Why Choose Notifuse" },
  { id: "faq", label: "FAQ" },
]

// Pros & Cons Summary Data
const proConsRows = [
  {
    label: "Starting Price",
    notifuse: "Free (self-hosted)",
    competitor: "Free tier: 3,000 emails/month",
  },
  {
    label: "License",
    notifuse: "AGPL-3.0 (Open-source)",
    competitor: "Proprietary (Closed-source)",
  },
  {
    label: "Deployment",
    notifuse: "Self-hosted",
    competitor: "Cloud-only SaaS",
  },
  {
    label: "Infrastructure",
    notifuse:
      "Multiple ESPs (Amazon SES, Mailgun, Postmark, Mailjet, SparkPost) + Custom SMTP",
    competitor: "Amazon SES only (with markup)",
  },
  {
    label: "Visual Builder",
    notifuse: "MJML drag-and-drop editor",
    competitor: "None (React Email code-based only)",
  },
  {
    label: "Segmentation",
    notifuse: "Dynamic with filters & conditions",
    competitor: "Static buckets only",
  },
  {
    label: "Contact Timeline",
    notifuse: "Yes (full activity history)",
    competitor: "No",
  },
]
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>
      Notifuse vs Resend: Open-Source vs Closed-Source Email Platform (2025)
    </title>
    <meta
      name="description"
      content="Compare Notifuse and Resend for email delivery. Notifuse is open-source with MJML builder, while Resend uses Amazon SES with markup pricing. Features, pricing, and use cases."
    />
    <link
      rel="canonical"
      href="https://notifuse.com/compare/notifuse-vs-resend"
    />
    <meta name="theme-color" content="#FF6B35" />
    <meta
      name="keywords"
      content="Notifuse vs Resend, Resend alternative, open-source email platform, MJML email builder, Amazon SES, React Email, email API comparison"
    />
    <meta name="robots" content="index, follow, max-image-preview:large" />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta
      property="og:url"
      content="https://notifuse.com/compare/notifuse-vs-resend"
    />
    <meta
      property="og:title"
      content="Notifuse vs Resend: Open-Source vs Closed-Source Email Platform"
    />
    <meta
      property="og:description"
      content="Compare Notifuse (open-source, self-hosted) and Resend (closed-source, Amazon SES wrapper). Features, pricing, and which is better for developers and marketers."
    />
    <meta property="og:image" content="https://notifuse.com/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content="Notifuse" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Notifuse vs Resend: Open-Source Email Platform Comparison"
    />
    <meta
      name="twitter:description"
      content="Compare Notifuse (open-source) vs Resend (Amazon SES wrapper). Self-hosted MJML builder vs cloud React Email."
    />
    <meta name="twitter:image" content="https://notifuse.com/og-image.png" />
    <meta name="twitter:site" content="@notifuse" />
    <meta name="twitter:creator" content="@notifuse" />

    <script
      defer
      data-domain="notifuse.com"
      src="https://plausible.notifuse.com/js/script.js"></script>
  </head>

  <body class="bg-white-98">
    <div class="container relative border-r border-l border-gray-200">
      <!-- Navigation -->
      <Navigation />

      <!-- Hero Section -->
      <ComparisonHero
        competitor="Resend"
        description="Notifuse is open-source with a visual MJML builder. Resend is a closed-source wrapper around Amazon SES with code-based React Email. Choose Notifuse to avoid vendor lock-in and ESP limitations."
      />

      <!-- Main Comparison Layout -->
      <ComparisonLayout
        title="Notifuse vs Resend"
        description="Detailed comparison of features, pricing, and use cases"
      >
        <!-- Table of Contents (Sidebar) -->
        <TableOfContents slot="toc" items={tocItems} />

        <!-- Overview Section -->
        <FeatureSection id="overview" title="Overview">
          <div
            class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-xl mb-12"
          >
            <div
              class="bg-gradient-to-br from-orange-50 to-pink-50 rounded-xl p-12"
            >
              <h3 class="text-xl font-bold text-slate-900 mb-8">
                The Two Core Differences
              </h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                  <div class="flex items-start mb-4">
                    <span class="text-2xl font-bold text-primary mr-3">1.</span>
                    <h4 class="font-semibold text-slate-900 mt-1">
                      Open-Source vs Closed-Source
                    </h4>
                  </div>
                  <p class="text-sm text-gray-700 mb-3">
                    <strong class="text-primary">Notifuse:</strong> AGPL-3.0 open-source,
                    self-hosted. Full control over your code and data.
                  </p>
                  <p class="text-sm text-gray-500">
                    <strong>Resend:</strong> Proprietary closed-source SaaS. Vendor
                    lock-in with no code access.
                  </p>
                </div>
                <div>
                  <div class="flex items-start mb-4">
                    <span class="text-2xl font-bold text-primary mr-3">2.</span>
                    <h4 class="font-semibold text-slate-900 mt-1">
                      Visual Builder vs Code-Based
                    </h4>
                  </div>
                  <p class="text-sm text-gray-700 mb-3">
                    <strong class="text-primary">Notifuse:</strong> MJML visual drag-and-drop
                    builder. No coding required.
                  </p>
                  <p class="text-sm text-gray-500">
                    <strong>Resend:</strong> React Email only. Requires coding every
                    email template.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Critical: Amazon SES Callout -->
          <div
            class="bg-gradient-to-br from-gray-200 via-gray-200 to-red-400 p-px rounded-xl mb-8"
          >
            <div
              class="bg-gradient-to-br from-red-50 to-orange-50 rounded-xl p-8"
            >
              <div class="flex items-start">
                <svg
                  class="w-8 h-8 text-red-500 mr-4 flex-shrink-0"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
                  ></path>
                </svg>
                <div>
                  <h4 class="font-bold text-slate-900 mb-2 text-lg">
                    Resend Uses Amazon SES Under the Hood
                  </h4>
                  <p class="text-gray-700 text-sm mb-3">
                    Resend is built on top of Amazon SES and adds a pricing
                    markup. With Notifuse, you can:
                  </p>
                  <ul class="space-y-2 text-sm text-gray-700">
                    <li class="flex items-start">
                      <svg
                        class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"></path>
                      </svg>
                      <span
                        >Connect <strong>directly to Amazon SES</strong> (same infrastructure,
                        no markup)</span
                      >
                    </li>
                    <li class="flex items-start">
                      <svg
                        class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"></path>
                      </svg>
                      <span
                        ><strong>Not tied to one ESP:</strong> Use Amazon SES, Mailgun,
                        Postmark, or any custom SMTP server</span
                      >
                    </li>
                    <li class="flex items-start">
                      <svg
                        class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"></path>
                      </svg>
                      <span
                        ><strong>Customize sending rate limits</strong> (Resend doesn't
                        allow this)</span
                      >
                    </li>
                    <li class="flex items-start">
                      <svg
                        class="w-5 h-5 text-green-600 mr-2 flex-shrink-0 mt-0.5"
                        fill="currentColor"
                        viewBox="0 0 20 20"
                      >
                        <path
                          fill-rule="evenodd"
                          d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                          clip-rule="evenodd"></path>
                      </svg>
                      <span
                        >Pay <strong>only AWS costs</strong> (~$1 per 10,000 emails)</span
                      >
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <p class="text-gray-600 mb-6">
            <span class="font-semibold text-slate-900">Resend</span> is a developer-first,
            cloud-based email API built on Amazon SES. It's focused on simplicity
            with React Email templates but is proprietary, cloud-only, and charges
            a markup on Amazon SES infrastructure.
          </p>
          <p class="text-gray-600 mb-6">
            <span class="font-semibold text-slate-900">Notifuse</span> is an open-source,
            self-hosted email platform with a visual MJML builder, advanced segmentation,
            multi-tenancy, and flexible ESP connections. <strong
              >Not tied to any single ESP</strong
            >—use Amazon SES, Mailgun, Postmark, or mix different ESPs for
            transactional vs marketing emails.
          </p>
        </FeatureSection>

        <!-- Quick Comparison Table -->
        <FeatureSection id="quick-comparison" title="Quick Comparison" gradient>
          <ProConsTable competitor="Resend" rows={proConsRows} />
          <ComparisonCTA compact />
        </FeatureSection>

        <!-- Email Builder -->
        <FeatureSection id="email-builder" title="Email Builder">
          <p class="text-gray-600 mb-6">
            The biggest difference: Notifuse has a visual no-code builder, while
            Resend requires coding every email template in React.
          </p>

          <ComparisonTable
            title="Email Builder Comparison"
            competitorName="Resend"
            features={[
              {
                feature: "Visual Email Builder",
                notifuse:
                  '<a href="https://documentation.mjml.io/" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline font-semibold">MJML</a>-based - guarantees mobile-responsive & compatible with all email clients',
                competitor: "None - React Email requires coding",
              },
              {
                feature: "Templating Engine",
                notifuse:
                  '<a href="https://shopify.github.io/liquid/" target="_blank" rel="noopener noreferrer" class="text-primary hover:underline font-semibold">Liquid</a>',
                competitor: "React/JSX",
                description: "Dynamic variables for personalization",
              },
              {
                feature: "Built-in File Manager",
                notifuse: "S3-compatible storage with CDN support",
                competitor: false,
              },
              {
                feature: "Template Library",
                notifuse: "Coming soon",
                competitor: "React Email templates",
              },
              {
                feature: "Support for Test Data",
                notifuse: true,
                competitor: false,
                description: "Preview emails with sample contact data",
              },
            ]}
          />

          <!-- Email Editor Screenshot -->
          <div class="my-8">
            <div
              class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-xl"
            >
              <div class="rounded-xl overflow-hidden">
                <img
                  src={emailEditorImage.src}
                  alt="Notifuse MJML Email Builder"
                  class="w-full h-auto"
                />
              </div>
            </div>
            <p class="text-center text-xs text-gray-500 mt-2">
              Notifuse UI - MJML Visual Email Builder (No Coding Required)
            </p>
          </div>

          <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 my-6">
            <h4 class="font-semibold text-slate-900 mb-2">Why This Matters</h4>
            <p class="text-gray-700 text-sm">
              With Notifuse, non-technical team members can create emails using
              the visual MJML builder. Resend requires developers to code every
              email template in React, making it unsuitable for teams with
              marketers or non-technical staff.
            </p>
          </div>
        </FeatureSection>

        <!-- Mailing-list Management -->
        <FeatureSection id="mailing-list" title="Mailing-list Management">
          <p class="text-gray-600 mb-6">
            Both platforms support audience management, but with different
            capabilities. Note: Resend calls mailing lists "Topics".
          </p>

          <ComparisonTable
            title="List Management Features"
            competitorName="Resend"
            features={[
              {
                feature: "Mailing Lists",
                notifuse: "Lists with full features",
                competitor: "Topics (Resend's terminology)",
              },
              {
                feature: "Private Lists",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Double Opt-in",
                notifuse: true,
                competitor: false,
              },
              {
                feature: "Welcome Email",
                notifuse: true,
                competitor: false,
              },
              {
                feature: "Unsubscribe Email",
                notifuse: true,
                competitor: false,
              },
              {
                feature: "List Analytics",
                notifuse: true,
                competitor: false,
                description: "Active, unsubscribed, spam, complaints metrics",
              },
              {
                feature: "Notification Center",
                notifuse: true,
                competitor: false,
                description: "Self-service notification center for subscribers",
              },
            ]}
          />
        </FeatureSection>

        <!-- Campaigns -->
        <FeatureSection id="campaigns" title="Campaigns">
          <p class="text-gray-600 mb-6">
            Both platforms support broadcast campaigns, but Notifuse offers
            significantly more features.
          </p>

          <ComparisonTable
            title="Campaign Features"
            competitorName="Resend"
            features={[
              {
                feature: "Broadcast Campaigns",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Send to Multiple Lists",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Filter by Contact Segments",
                notifuse: true,
                competitor: false,
                description:
                  "Resend segments are static buckets without filters",
              },
              {
                feature: "A/B Testing with Auto Winner Selection",
                notifuse: true,
                competitor: false,
              },
              {
                feature: "UTM Tracking Parameters",
                notifuse: true,
                competitor: false,
              },
              {
                feature: "Schedule in Specific Timezone",
                notifuse: true,
                competitor: false,
              },
            ]}
          />
        </FeatureSection>

        <!-- Contact Management & Segmentation -->
        <FeatureSection
          id="contact-management"
          title="Contact Management & Segmentation"
        >
          <p class="text-gray-600 mb-6">
            A major difference: Notifuse has full contact activity timelines and
            dynamic segmentation, while Resend has static segments only and no
            activity timeline.
          </p>

          <ComparisonTable
            title="Contact & Segmentation Features"
            competitorName="Resend"
            features={[
              {
                feature: "Custom Contact Fields",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Activity Timeline",
                notifuse: true,
                competitor: false,
                description:
                  "Complete history of emails, opens, clicks, and profile changes",
              },
              {
                feature: "Segmentation Type",
                notifuse: "Dynamic with filters & conditions",
                competitor: "Static buckets only (no dynamic rules)",
              },
              {
                feature: "Relative Date Filters",
                notifuse: true,
                competitor: false,
                description: 'E.g., "subscribed in the last 30 days"',
              },
            ]}
          />

          <!-- Contact Profile Screenshot -->
          <div class="my-8">
            <div
              class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-xl"
            >
              <div class="rounded-xl overflow-hidden">
                <img
                  src={contactProfileImage.src}
                  alt="Notifuse Contact Profile with Activity Timeline"
                  class="w-full h-auto"
                />
              </div>
            </div>
            <p class="text-center text-xs text-gray-500 mt-2">
              Notifuse UI - Contact Profile with Activity Timeline (Resend
              doesn't have this)
            </p>
          </div>

          <div
            class="bg-purple-50 border border-purple-200 rounded-lg p-6 my-6"
          >
            <h4 class="font-semibold text-slate-900 mb-2">
              Dynamic vs Static Segmentation
            </h4>
            <p class="text-gray-700 text-sm">
              Notifuse's dynamic segments automatically update based on
              conditions and filters. Resend's segments are just static
              buckets—you manually add/remove contacts. This means no "engaged
              users in last 30 days" or "opened but didn't click" segments in
              Resend.
            </p>
          </div>
        </FeatureSection>

        <!-- Email Sending & Deliverability -->
        <FeatureSection
          id="email-sending"
          title="Email Sending & Deliverability"
        >
          <div
            class="bg-gradient-to-br from-gray-200 via-gray-200 to-green-400 p-px rounded-xl mb-8"
          >
            <div
              class="bg-gradient-to-br from-white to-green-50 rounded-xl p-8"
            >
              <h4 class="font-bold text-slate-900 mb-3 text-lg">
                ESP Flexibility: A Major Advantage
              </h4>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <p class="text-sm font-semibold text-primary mb-2">
                    Notifuse
                  </p>
                  <ul class="text-sm text-gray-700 space-y-1">
                    <li>
                      ✓ Choose any ESP (Amazon SES, Mailgun, Postmark, Mailjet,
                      SparkPost) + Custom SMTP
                    </li>
                    <li>✓ Use different ESPs for transactional vs marketing</li>
                    <li>✓ Switch ESPs anytime</li>
                    <li>✓ Customize sending rate limits</li>
                    <li>✓ No vendor lock-in</li>
                  </ul>
                </div>
                <div>
                  <p class="text-sm font-semibold text-gray-700 mb-2">Resend</p>
                  <ul class="text-sm text-gray-500 space-y-1">
                    <li>✗ Locked to Amazon SES only</li>
                    <li>✗ Can't use different ESPs</li>
                    <li>✗ Can't switch providers</li>
                    <li>✗ Can't customize rate limits</li>
                    <li>✗ Vendor lock-in</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>

          <ComparisonTable
            title="Email Delivery Features"
            competitorName="Resend"
            features={[
              {
                feature: "ESP Options",
                notifuse:
                  "Amazon SES, Mailgun, Postmark, Mailjet, SparkPost + Custom SMTP",
                competitor: "Amazon SES only (locked-in)",
              },
              {
                feature: "Separate ESPs for Email Types",
                notifuse: true,
                competitor: false,
                description:
                  "Use different ESPs for transactional vs marketing",
              },
              {
                feature: "Customizable Rate Limits",
                notifuse: true,
                competitor: false,
              },
              {
                feature: "SMTP Relay",
                notifuse: true,
                competitor: false,
                tooltip:
                  "Built-in SMTP server that accepts standard SMTP connections for sending transactional emails - perfect for legacy integrations.",
              },
              {
                feature: "Opens/Clicks Tracking",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Bounce Webhooks",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Delivery Webhooks",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Spam Webhooks",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Complaint Webhooks",
                notifuse: true,
                competitor: true,
              },
            ]}
          />
        </FeatureSection>

        <!-- Analytics & Reporting -->
        <FeatureSection id="analytics" title="Analytics & Reporting">
          <p class="text-gray-600 mb-6">
            Both platforms track email events, but Notifuse provides more
            comprehensive analytics and reporting.
          </p>

          <ComparisonTable
            title="Analytics Features"
            competitorName="Resend"
            features={[
              {
                feature: "Open Rate Tracking",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Click Tracking",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Bounce Tracking",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Complaint Tracking",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Unsubscribe Tracking",
                notifuse: true,
                competitor: true,
              },
              {
                feature: "Transactional vs Marketing Stats",
                notifuse: true,
                competitor: false,
                description:
                  "Separate analytics for transactional and broadcast campaigns",
              },
            ]}
          />

          <!-- Analytics Dashboard Screenshot -->
          <div class="my-8">
            <div
              class="bg-gradient-to-br from-gray-200 via-gray-200 to-primary/80 p-px rounded-xl"
            >
              <div class="rounded-xl overflow-hidden">
                <img
                  src={dashboardImage.src}
                  alt="Notifuse Analytics Dashboard"
                  class="w-full h-auto"
                />
              </div>
            </div>
            <p class="text-center text-xs text-gray-500 mt-2">
              Notifuse UI - Analytics Dashboard
            </p>
          </div>
        </FeatureSection>

        <!-- Multi-tenancy & Agency -->
        <FeatureSection id="multi-tenancy" title="Multi-tenancy & Agency">
          <p class="text-gray-600 mb-6">
            Notifuse is built for agencies and SaaS platforms. Resend has no
            multi-tenancy.
          </p>

